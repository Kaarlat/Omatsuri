<h1>Carrito de Compras</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        {{this.product.title}} - {{this.quantity}} x ${{this.product.priceTicket}} = ${{multiply this.product.priceTicket this.quantity}}
        <form action="/cart/{{../cart._id}}/remove" method="POST">
          <input type="hidden" name="eventId" value="{{this.product._id}}">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    {{/each}}
  </ul>
  <p><strong>Total:</strong> ${{cart.totalPrice}}</p>
  <a href="/checkout">Proceder al Pago</a>
{{else}}
  <p>No hay productos en el carrito.</p>
{{/if}}
