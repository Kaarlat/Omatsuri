{{!-- Carrusel de imágenes --}}
<div class="container-fluid px-0 mb-4">
    <div id="eventCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/event1.jpg" class="d-block w-100" alt="Evento 1">
                    </div>
                    <div class="col-md-4">
                        <img src="/event2.png" class="d-block w-100" alt="Evento 2">
                    </div>
                    <div class="col-md-4">
                        <img src="/event3.png" class="d-block w-100" alt="Evento 3">
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/event4.jpg" class="d-block w-100" alt="Evento 4">
                    </div>
                    <div class="col-md-4">
                        <img src="/event5.jpg" class="d-block w-100" alt="Evento 5">
                    </div>
                    <div class="col-md-4">
                        <img src="/event6.png" class="d-block w-100" alt="Evento 6">
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

{{!-- Filtros y Botones --}}
<div class="container mb-3">
    <div class="row">
        <div class="col-md-8">
            <div class="d-flex align-items-center">
                <select id="categoryFilter" class="form-select me-4">
                    <option value="all">Todas</option>
                    <option value="cultural">Cultural</option>
                    <option value="deportivo">Deportivo</option>
                    <option value="economico">Económico</option>
                    <option value="concierto">Concierto</option>
                    <option value="gratuitos">Gratuitos</option>
                    <option value="gastronomicos">Gastronómicos</option>
                    <option value="adulto_mayor">Adulto Mayor</option>
                    <option value="aventura">Aventura</option>
                </select>
                <button id="search-btn" class="btn btn-orange">Buscar</button>
            </div>
        </div>
        <div class="col-md-3 text-end">
            <a href="/realtimeevents" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Crear Evento
            </a>
        </div>
    </div>
</div>

{{!-- Carrusel de Cards de Eventos --}}
<div class="container">
    {{#if filteredEvents.length}}
        <div id="filteredEventsCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {{#each filteredEvents}}
                    {{#if (isFirstInGroup @index 3)}}
                        <div class="carousel-item {{#if (eq @index 0)}}active{{/if}}">
                            <div class="row">
                    {{/if}}
                    
                    <div class="col-md-4">
                        <div class="card event-card">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text">{{this.location.venue}}</p>
                                <p class="card-text">{{this.date}}</p>
                                <p class="card-text">{{this.category}}</p>
                                <button class="btn btn-primary">Añadir al carrito</button>
                            </div>
                        </div>
                    </div>

                    {{#if (isLastInGroup @index 3)}}
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    {{else}}
        <div class="alert alert-info">No hay eventos para esta categoría.</div>
    {{/if}}
</div>