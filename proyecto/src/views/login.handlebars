<body>
    <div class="container">
        <div class="card">
            <div class="forms-container">
                <!-- Formulario de Login -->
                <form id="loginForm" class="form login-form active">
                    <h2>Login</h2>
                    <input type="email" id="loginEmail" placeholder="Email" required>
                    <input type="password" id="loginPassword" placeholder="Contraseña" required>
                    <button type="button" id="signInBtn">Iniciar sesión</button>
                </form>

                <!-- Formulario de Registro -->
                <form id="registerForm" class="form register-form">
                    <h2>Sign Up</h2>
                    <input type="text" id="firstName" placeholder="First Name" required>
                    <input type="text" id="lastName" placeholder="Last Name" required>
                    <input type="email" id="registerEmail" placeholder="Email" required>
                    <input type="number" id="age" placeholder="Age" required>
                    <input type="password" id="registerPassword" placeholder="Password" required>
                    <button type="button" id="signUpBtn">Registrarse</button>
                </form>
            </div>

            <div class="panel-container">
                <div class="panel panel-login">
                    <h3>¿No tienes cuenta?</h3>
                    <button class="btn" id="signUpBtn">Sign Up</button>
                </div>
                <div class="panel panel-register">
                    <h3>¿Ya tienes cuenta?</h3>
                    <button class="btn" id="signInBtn">Login</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/auth.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
