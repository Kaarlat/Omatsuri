<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="forms-container">
                <!-- Formulario de Login -->
                <form id="loginForm" class="form login-form active" action="/login" method="POST">
                    <h2>Login</h2>
                    <input type="email" id="loginEmail" name="email" placeholder="Email" required>
                    <input type="password" id="loginPassword" name="password" placeholder="Contraseña" required>
                    <button type="submit" id="signInBtn">Iniciar sesión</button>
                </form>

                <!-- Formulario de Registro -->
                <form id="registerForm" class="form register-form" action="/register" method="POST">
                    <h2>Sign Up</h2>
                    <input type="text" id="Name" name="name" placeholder="Name" required>
                    <input type="email" id="registerEmail" name="email" placeholder="Email" required>
                    <input type="password" id="registerPassword" name="password" placeholder="Password" required>
                    <button type="submit" id="signUpBtn">Registrarse</button>
                </form>
            </div>

            <div class="panel-container">
                <div class="panel panel-login">
                    <h3>¿No tienes cuenta?</h3>
                    <button class="btn" id="showSignUpBtn">Sign Up</button>
                </div>
                <div class="panel panel-register">
                    <h3>¿Ya tienes cuenta?</h3>
                    <button class="btn" id="showSignInBtn">Login</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/auth.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
