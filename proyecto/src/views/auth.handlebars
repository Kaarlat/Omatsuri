<body>
    <div class="container">
        <div class="form-container" id="form-container">
            <!-- Formulario de Iniciar Sesión -->
            <div class="form" id="login-form">
                <h2>Iniciar Sesión</h2>
                <form id="login" method="POST" action="/api/auth/login">
                    <input type="email" name="email" placeholder="Correo Electrónico" required>
                    <input type="password" name="password" placeholder="Contraseña" required>
                    <button type="submit">Iniciar Sesión</button>
                    <p>¿No tienes cuenta? <a href="/api/auth/register" id="toggle">Regístrate</a></p>
                </form>
            </div>

            <!-- Formulario de Registro -->
            <div class="form" id="register-form">
                <h2>Registrarse</h2>
                <form id="register" method="POST" action="/api/auth/register">
                    <input type="text" name="first_name" placeholder="Nombre" required>
                    <input type="email" name="email" placeholder="Correo Electrónico" required>
                    <input type="password" name="password" placeholder="Contraseña" required>
                    <button type="submit">Registrar</button>
                    <p>¿Ya tienes cuenta? <a href="/api/auth/login" id="toggle-back">Inicia Sesión</a></p>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/auth.js"></script>
</body>
