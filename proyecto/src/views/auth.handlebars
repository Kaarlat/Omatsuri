<!-- views/auth.handlebars -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/auth.css"> <!-- Asegúrate de tener la ruta correcta -->
    <title>Autenticación</title>
</head>
<body>
    <div class="container">
        <div class="form-container" id="form-container">
            <!-- Formulario de Iniciar Sesión -->
            <div class="form" id="login-form">
                <h2>Iniciar Sesión</h2>
                <form id="login">
                    <input type="email" placeholder="Correo Electrónico" required>
                    <input type="password" placeholder="Contraseña" required>
                    <button type="submit">Iniciar Sesión</button>
                    <p>¿No tienes cuenta? <a href="#" id="toggle">Regístrate</a></p>
                </form>
            </div>

            <!-- Formulario de Registro -->
            <div class="form" id="register-form">
                <h2>Registrarse</h2>
                <form id="register">
                    <input type="text" placeholder="Nombre" required>
                    <input type="text" placeholder="Apellido" required>
                    <input type="email" placeholder="Correo Electrónico" required>
                    <input type="number" placeholder="Edad" required>
                    <input type="password" placeholder="Contraseña" required>
                    <button type="submit">Registrar</button>
                    <p>¿Ya tienes cuenta? <a href="#" id="toggle-back">Inicia Sesión</a></p>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/auth.js"></script> <!-- Archivo JavaScript para manejar la interacción -->
</body>
</html>
